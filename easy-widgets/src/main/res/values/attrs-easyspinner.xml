<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="popupTextAlignment" format="enum">
        <enum name="start" value="0" />
        <enum name="end" value="1" />
        <enum name="center" value="2" />
    </attr>

    <declare-styleable name="EasySpinner">
        <attr name="spinner_arrowTint" format="color" />
        <attr name="spinner_hideArrow" format="boolean" />
        <attr name="spinner_arrowDrawable" format="reference|color" />
        <!--标题与下拉菜单栏间距-->
        <attr name="spinner_title_margin" format="dimension" />
        <!--spinner本身的背景-->
        <attr name="spinner_backgroundSelector" format="integer" />
        <!--下拉菜单item背景！-->
        <attr name="spinner_item_backgroundSelector" format="integer" />
        <!--下拉文本的颜色-->
        <attr name="spinner_textTint" format="color" />
        <attr name="spinner_popupTextAlignment" format="enum" />
        <attr name="spinner_entries" format="reference" />
        <!--默认文字-->
        <attr name="spinner_default_text" format="string"/>
        <!--spinner的最大条目数，超过该数量，高度不再增大-->
        <attr name="spinner_maxNumber" format="integer" />
    </declare-styleable>
</resources>